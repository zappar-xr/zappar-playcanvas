{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "noImplicitUseStrict": true,
    "alwaysStrict": false
  },
  "include": ["src", "typings", "jest", "puppeteer", "ts-jest", "jest-environment-puppeteer"],
  "exclude": ["node_modules", "tmp" , "**/__tests__/*"]
}
